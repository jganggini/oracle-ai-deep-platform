# Configuración para MinerU Docker
MINERU_PORT=8001

# GPU
GPU_ENABLED=true
GPU_DEVICE=cuda
GPU_BACKEND=pipeline

# Métricas (Prometheus expuestas en el mismo puerto 8001)
METRICS_ENABLED=true

# Optimizaciones de hilos para evitar contención
OMP_NUM_THREADS=1
MKL_NUM_THREADS=1
OPENBLAS_NUM_THREADS=1
NUMEXPR_NUM_THREADS=1

# Configuración de caché y modelos
CACHE_DIR=/app/cache
MODEL_PATH=/app/models

# Nota: vram_limit y concurrency ahora se pasan por request a /ocr (form-data)